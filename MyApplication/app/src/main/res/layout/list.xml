<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/visit_number3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/belongTo"
        android:layout_toStartOf="@+id/visit_number"
        android:text="访问量：" />

    <TextView
        android:id="@+id/head_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:text="标题" />

    <TextView
        android:id="@+id/belongTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginStart="44dp"
        android:text="作者"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/visit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/belongTo"
        android:layout_marginEnd="157dp"
        android:text="访问量" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/visit_number3"
        android:layout_marginEnd="36dp"
        android:text="时间" />

    <TextView
        android:id="@+id/keyWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="keyWords"
        android:textColor="@android:color/holo_purple"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/head_name"
        android:layout_marginTop="54dp"
        android:text="作者："
        android:textColor="@android:color/holo_blue_dark" />
</RelativeLayout>
