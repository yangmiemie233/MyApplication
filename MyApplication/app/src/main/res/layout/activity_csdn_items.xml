<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/head_name"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="博客名字"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/head_name"
        app:srcCompat="@drawable/information" />

    <TextView
        android:id="@+id/visit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/keyWords"
        android:layout_marginEnd="19dp"
        android:text="访问量"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:id="@+id/keyWords"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="关键字"
        android:layout_marginLeft="15dp"
        android:textColor="@android:color/holo_purple"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/createdAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/visit_number"
        android:layout_marginEnd="104dp"
        android:text="createdAt" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="35dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/empty_fill" />

    <ImageView
        android:id="@+id/update"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/delete"
        app:srcCompat="@drawable/brush_fill" />

</RelativeLayout>
