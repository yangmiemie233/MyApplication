<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main5Activity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/information" />

    <TextView
        android:id="@+id/person"
        android:layout_width="186dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="小洋的博客"
        android:textSize="15dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/yuanchaung"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/person"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/cc" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="276dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="71dp"
        android:layout_marginTop="91dp"
        android:text="标题"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yuanchaung"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/number" />

    <TextView
        android:id="@+id/creat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="115dp"
        android:layout_marginTop="143dp"
        android:text="创建时间" />

    <TextView
        android:id="@+id/visit_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignTop="@+id/creat_time"
        android:text="访问量" />

    <TextView
        android:id="@+id/content"
        android:layout_width="340dp"
        android:layout_height="392dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView10"
        android:layout_marginStart="19dp"
        android:text="内容"
        android:scrollbars="vertical"
        android:textSize="17dp"
        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/content"
        android:layout_marginTop="14dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</RelativeLayout>